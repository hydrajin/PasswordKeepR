<!DOCTYPE html>
<html lang="en">
  <head>
    <title>PasswordKeepR</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/main.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
      <%- include('partials/_header') %>
    </form>
  </head>
  <body>
    <h2>Generate Password</h2>
    <main style="margin: 1em">
      <!-- temporary action/method -->
      <form class="form-inline" action="/" method="GET">
        <!--2 important attributes: action and method. Action:(tells the form which url to submit) - Method: (tells the form which HTTP method to use) -->
        <container>
        <div class="form-group mb-2">
          <form action="/action_page.php">
            <label for="Categories">Category:</label>
            <select name="category" id="category" value="<%= category %>">
              <option value="">Entertainment</option>
              <option value="Social">Social</option>
              <option value="Work Related">Work Related</option>
              <option value="Payments">Payments</option>
              <option value="Misc">Misc</option>
            </select>
            <br><br>
          </form>
          category: <%= category %>
          <div>
            <label for="username">username:</label>
             <input
              class="form-control"
              type="text"
              name="username"
              placeholder="username"
              value="<%= username %>"
              style="width: 300px; margin: 1em"/>
          </div>
          <div>
            <label for="url">url/website:</label>
              <input
              class="form-control"
              type="text"
              name="url"
              value="<%= url %>"
              placeholder="http://"
              style="width: 300px; margin: 1em"/>
          </div>
          <div>
            <label for="password">password:</label>
              <input class="form-control" type="text"  name="password"
              value="<%= password %>"
              placeholder="generated password"
              style="width: 300px; margin: 1em"/>
          </div>
          <container>
            <div class="slidecontainer">
              <p>Password Length:</p>
              <input class="slider" type="range" min="1" max="20" value="10" id="myRange">
              <p>Value: <span id="demo"></span></p>
              <script>
                var slider = document.getElementById("myRange");
                var output = document.getElementById("demo");
                output.innerHTML = slider.value;
                slider.oninput = function() {
                  output.innerHTML = this.value;
                }
                </script>
            </div>
          </container>
          <container class="checkbox">
            <!-- <form action="/action_page.php"> -->
            <input type="checkbox" id="Uppercase" name="Uppercase" value="Uppercase">
            <label for="Uppercase"> Uppercase</label><br>
            <input type="checkbox" id="Lowercase" name="Lowercase" value="Lowercase">
            <label for="Lowercase"> Lowercase</label><br>
            <input type="checkbox" id="Numbers" name="Numbers" value="Numbers">
            <label for="Numbers"> Numbers</label><br>
            <input type="checkbox" id="Symbols" name="Symbols" value="Symbols">
            <label for="Symbols"> Symbols</label><br>
            <!-- <input type="submit" value="Submit"> -->
            </form>
          </container>
          <div class="g-buttons">
          <!-- both just redirect to "/" for now -->
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
        </container>
        </div>
      </form>
    </main>
  </body>
</html>
