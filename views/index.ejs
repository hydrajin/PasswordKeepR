  <body>
    <i class="fas fa-lock"></i>
    <h2>Lighthouse Labs shared Accounts</h2>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Category</th>
          <th scope="col">Website</th>
          <th scope="col">Username</th>
          <th scope="col">Password</th>
          <th scope="col" style="padding-left: 20px">Copy</th>
          <th scope="col" style="padding-left: 20px">Edit</th>
          <th scope="col" style="padding-left: 20px">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% for(let account of accounts) { %>
        <tr>
          <td><%= account.category %></td>
          <td><%= account.url %></td>
          <td><%= account.username %></td>
          <td><%= account.password %></td>
          <td>
            <form method="GET" action="">
              <button class="btn btn-outline-primary">Copy</button>
            </form>
          </td>
          <td>
            <form method="GET" action="">
              <button class="btn btn-outline-primary">Edit</button>
            </form>
          </td>
          <td>
            <form method="POST" action="">
              <button class="btn btn-outline-danger">Delete</button>
            </form>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
