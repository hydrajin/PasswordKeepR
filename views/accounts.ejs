<!DOCTYPE html>
<html lang="en">
  <head>
    <title>PasswordKeepR</title>
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/main.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
      <%- include('partials/_header') %>
  </head>
  <body>
    <i class="fas fa-lock"></i>
    <h2><%= organization.name %> shared Accounts</h2>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Category</th>
          <th scope="col">Website</th>
          <th scope="col">Username</th>
          <th scope="col">Password</th>
          <th scope="col" style="padding-left: 20px">Copy</th>
          <th scope="col" style="padding-left: 20px">Edit</th>
          <th scope="col" style="padding-left: 20px">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% for(let account of accounts) { %>
        <tr class="rowData">
          <td><%= account.category %></td>
          <td><%= account.url %></td>
          <td><%= account.username %></td>
          <td class="account_id"><%= account.id %></td>
          <!-- We need to select this value -->
          <td><input type="text" class="password"value="<%= account.password %>"> </td>
          <td>
            
              <button class="copy">Copy</button>
              
            
          </td>
          <td>
            <!-- <form  method="POST" action="/users/accounts/<%= account.id %>/edit">
              -->
              <button  class="btn btn-outline-primary edit_password" data-url= "/users/accounts/<%= account.id %>/edit">Edit</button>
            <!-- </form> -->
          </td>
          <td> 
            <!-- <form method="POST" action="/users/accounts/<%= account.id %>/delete"> -->
              <button class="btn btn-outline-danger password_delete" data-url= "/users/accounts/<%= account.id %>/delete">Delete</button>
            <!-- </form> -->
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </body>
</html>


