<!DOCTYPE html>
<html lang="en">
  <head>
    <title>PasswordKeepR</title>
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/main.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <%- include('partials/_header') %>
  </head>
  <body>
    <h2 class="organization"><%= organization.name %> Shared Accounts</h2>
    <div>
    <table class="styled-table">
      <thead class="styled-table">
        <tr>
          <th scope="col" class="category">Category</th>
          <th scope="col" class="website">Website</th>
          <th scope="col" class ="username">Username</th>
          <th scope="col" class="password">Password</th>
          <th scope="col" style="padding-left: 20px"class="copy-b" >Copy </th>
          <th scope="col" style="padding-left: 20px">Edit</th>
          <th scope="col" class="del" style="padding-left: 20px">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% for(let account of accounts) { %>
        <tr class="rowData active-row">
          <td><%= account.category %></td>
          <td><%= account.url %></td>
          <td class="col.user"><%= account.username %></td>
          <!-- <td class="account_id"><%= account.id %></td> -->
          <!-- We need to select this value -->
          <td>
            <input
              type="text"
              class="password"
              value="<%= account.password %>"
            />
          </td>
          <td>
            <button class="copy">Copy</button>
          </td>
          <td>
            <!-- <form  method="POST" action="/users/accounts/<%= account.id %>/edit">
              -->
            <button
              class="btn btn-outline-primary edit_password"
              data-url="/users/accounts/<%= account.id %>/edit"
            >
              Edit
            </button>
            <!-- </form> -->
          </td>
          <td>
            <!-- <form method="POST" action="/users/accounts/<%= account.id %>/delete"> -->
            <button
              class="btn btn-outline-danger password_delete"
              data-url="/users/accounts/<%= account.id %>/delete"
            >
              Delete
            </button>
            <!-- </form> -->
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </body>
</html>
